{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "cpk-template-schema-1-0",
    "title": "",
    "type": "object",
    "properties": {
        "schema": {
            "type": "string",
            "const": "1.0"
        },
        "name": {
            "type": "string"
        },
        "version": {
            "type": "string",
            "pattern": "^(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)(\\.(?:0|[1-9]\\d*))?$"
        },
        "mappings": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "type": "string"
                    },
                    "destination": {
                        "type": "string"
                    },
                    "triggers": {
                        "type": "array",
                        "items":  {
                            "type": "string",
                            "anyOf": [
                                {
                                    "enum": [
                                        "default",
                                        "run:mount"
                                    ]
                                },
                                {
                                    "pattern": "^launcher:[a-zA-Z0-9_\\-.]+$"
                                }
                            ]
                        }
                    },
                    "required": {
                        "type": "boolean"
                    },
                    "mode": {
                        "type": "string",
                        "enum": [
                            "ro",
                            "rw"
                        ]
                    }
                },
                "required": [
                    "source",
                    "destination"
                ],
                "additionalProperties": false
            }
        },
        "url": {
            "anyOf": [
                {
                    "const": null
                },
                {
                    "type": "string",
                    "format": "uri"
                }
            ]
        },
        "must_have": {
            "type": "object",
            "properties": {
                "files": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "directories": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "schema",
        "name",
        "version"
    ],
    "additionalProperties": false
}