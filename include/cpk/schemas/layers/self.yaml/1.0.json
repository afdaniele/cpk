{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "cpk-project-layer-self-1-0",
    "title": "",
    "type": "object",
    "properties": {
        "schema": {
            "type": "string",
            "const": "1.0"
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "organization": {
            "type": "string",
            "minLength": 1
        },
        "distribution": {
            "type": "string",
            "minLength": 1
        },
        "description": {
            "type": "string",
            "minLength": 1
        },
        "url": {
            "type": "string",
            "format": "url"
        },
        "maintainer": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "email": {
                    "type": "string",
                    "format": "email"
                }
            },
            "required": [
                "name",
                "email"
            ],
            "additionalProperties": false
        },
        "version": {
            "type": "string",
            "pattern": "^(0|([1-9][0-9]*))(\\.(0|([1-9][0-9]*))(\\.(0|([1-9][0-9]*))(\\.[a-z0-9-_]+)?)?)?$"
        }
    },
    "required": [
        "schema",
        "name",
        "organization",
        "description",
        "maintainer",
        "version"
    ],
    "additionalProperties": false
}