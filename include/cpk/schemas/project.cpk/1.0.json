{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "cpk-project-schema-1-0",
    "title": "",
    "type": "object",
    "properties": {
        "schema": {
            "type": "string",
            "const": "1.0"
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "organization": {
            "type": "string",
            "minLength": 1
        },
        "description": {
            "type": "string",
            "minLength": 1
        },
        "template": {
            "type": ["null", "object"]
        },
        "version": {
            "type": "string",
            "pattern": "^(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)$"
        },
        "maintainer": {
            "type": "string",
            "minLength": 1
        },
        "registry": {
            "type": "string",
            "format": "hostname"
        },
        "tag": {
            "type": "string",
            "minLength": 1
        },
        "mappings": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "type": "string"
                    },
                    "destination": {
                        "type": "string"
                    },
                    "triggers": {
                        "type": "array",
                        "items":  {
                            "type": "string",
                            "anyOf": [
                                {
                                    "enum": [
                                        "default",
                                        "run:mount"
                                    ]
                                },
                                {
                                    "pattern": "^launcher:[a-zA-Z0-9_\\-.]+$"
                                }
                            ]
                        }
                    },
                    "required": {
                        "type": "boolean"
                    },
                    "mode": {
                        "type": "string",
                        "enum": [
                            "ro",
                            "rw"
                        ]
                    }
                },
                "required": [
                    "source",
                    "destination"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "schema",
        "name"
    ],
    "additionalProperties": false
}